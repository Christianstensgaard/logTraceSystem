# Use the .NET runtime image for .NET 8.0
FROM mcr.microsoft.com/dotnet/runtime:8.0 AS runtime

# Set the working directory inside the container
WORKDIR /app

# Copy the published files from the local out directory into the container
COPY out/. . 

# Define the entry point (replace MessageServer.dll with your project's DLL name)
ENTRYPOINT ["dotnet", "MessageServer.dll"]
